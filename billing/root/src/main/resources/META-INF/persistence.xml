<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="unit.test" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property key="hibernate.cache.use_query_cache">false</property>
			<property key="hibernate.cache.use_second_level_cache">false</property>
			<property key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
			<property name="jadira.usertype.autoRegisterUserTypes" value="true" />
			 <property key="hibernate.connection.CharSet">utf8</property>
			        <property key="hibernate.connection.characterEncoding">utf8</property>
			        <property key="hibernate.connection.useUnicode">true</property>
		</properties>
	</persistence-unit>

</persistence>